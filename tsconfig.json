{
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist"],
    "compilerOptions": {
        "outDir": "dist",
        "module": "es6",
        "target": "es5",
        "lib": ["es5", "es6", "es7", "es2017", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "forceConsistentCasingInFileNames": true,
        "noUnusedLocals": true,
        "experimentalDecorators": true,
        "declaration": false,
        "strict": true,
        "jsx": "react",
        "moduleResolution": "node"
    }
}
